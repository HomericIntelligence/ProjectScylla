  "trigger_phrases": [
    "pre-flight check",
    "verify issue before starting",
    "check if issue is ready to work on",
    "issue preflight",
    "verify issue state before implementation",
    "can I start working on this issue"
  ],
  "commands": {
    "check_issue_state": "gh issue view <number> --json state,title,closedAt",
    "search_commits": "git log --all --oneline --grep='<number>' | head -5",
    "search_prs": "gh pr list --search '<number>' --state all --json number,title,state",
    "check_worktrees": "git worktree list | grep '<number>'",
    "check_branches": "git branch --list '*<number>*'"
  },
